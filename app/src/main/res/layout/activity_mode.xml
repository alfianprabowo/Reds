<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="@string/select_mode"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linear_broker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/linear_broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linear_presentation"
        android:orientation="vertical"
        android:onClick="brokerPage"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dashboard"
            android:contentDescription="@string/image_property"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/button_home_broker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_dashboard"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/linear_broker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:onClick="presentationPage"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/presentation"
            android:contentDescription="@string/image_property"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/button_home_presentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presentation"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>